<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zamataro.arduinoandroidmionew.DiarioActivity">

    <TextView
        android:id="@+id/A3DiarioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diario Activity"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/AddNoteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Add_Note"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/A3DiarioText"
        android:layout_alignStart="@+id/A3DiarioText"
        android:layout_marginBottom="97dp" />

    <EditText
        android:id="@+id/EditTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/A3DiarioText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Insert the Title"
        android:inputType="textShortMessage|textPersonName"
        android:singleLine="false"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditMessage"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AddNoteBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="Write the Message Here"
        android:inputType="text|textMultiLine" />

    <Button
        android:id="@+id/ViewNotesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="32dp"
        android:text="View All Notes" />
</RelativeLayout>
